{

    "manifest_version": 2,
    "name": "YTGamingLiveButton",
    "version": "1.0",
  
    "description": "Adds a button to make reaching live gaming content easier.",
  
    "icons": {
      "48": "icons/YTLV-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "exclude_matches": ["*://studio.youtube.com/*", "*://*.youtube.com/audiolibrary/*"],
        "js": ["YTGamingLiveButton.js"],
        "css": ["ytglb-main.css"]
      }
    ]
  
  }
  